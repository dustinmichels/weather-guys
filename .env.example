# Google AI API Key (required for real AI responses)
VITE_GOOGLE_AI_KEY=your_api_key_here

# ============================================
# MOCK MODE CONFIGURATION
# ============================================
# Enable individual mock modes for testing without API calls
# Set to 'true' to enable, 'false' or omit to disable

# Mock City/Location Lookup (bypasses Nominatim API)
# Uses Cambridge, MA as the default mock location
VITE_MOCK_CITY=false

# Mock Weather Data (bypasses Open-Meteo API)
# Uses configurable weather scenarios
VITE_MOCK_WEATHER=false

# Weather scenario options: default, sunny, rainy, snowy, thunderstorm, random
# Only applies when VITE_MOCK_WEATHER=true
VITE_MOCK_WEATHER_SCENARIO=default

# Mock AI Responses (bypasses Google Gemini API)
# Uses predefined witty responses
VITE_MOCK_AI=false

# Use random AI responses from a pool of alternatives
# Only applies when VITE_MOCK_AI=true
VITE_MOCK_AI_RANDOM=false

# ============================================
# MOCK MODE EXAMPLES
# ============================================

# Example 1: Full mock mode (no API calls at all)
# VITE_MOCK_CITY=true
# VITE_MOCK_WEATHER=true
# VITE_MOCK_AI=true

# Example 2: Test different weather scenarios
# VITE_MOCK_CITY=true
# VITE_MOCK_WEATHER=true
# VITE_MOCK_WEATHER_SCENARIO=rainy
# VITE_MOCK_AI=false

# Example 3: Development without AI costs
# VITE_MOCK_CITY=false
# VITE_MOCK_WEATHER=false
# VITE_MOCK_AI=true
# VITE_MOCK_AI_RANDOM=true

# ============================================
# NOTES
# ============================================
# - Mock mode is useful for development, testing, and demos
# - Each API can be mocked independently
# - Mock data is configured in src/config/mock.config.js
# - Console logs will indicate when mock mode is active
# - Simulated network delays are included for realistic testing
